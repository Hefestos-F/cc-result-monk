{
  "manifest_version": 3,
  "name": "Injetor com Atualização e Interface",
  "version": "1.0",
  "description": "Injeta código, verifica atualizações e permite configuração via interface",
  "permissions": ["scripting", "storage", "alarms"],
  "host_permissions": ["https://google.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://google.com/*"],
      "js": ["content.js"]
    }
  ]
}
