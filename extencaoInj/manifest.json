{
  "manifest_version": 3,
  "name": "Gerenciador de UserScripts",
  "version": "1.1",
  "description": "Injeta scripts personalizados com atualização automática e interface de configuração",
  "permissions": ["scripting", "storage", "alarms"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
