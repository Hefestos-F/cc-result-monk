{
  "manifest_version": 3,
  "name": "Script Injector",
  "version": "1.0",
  "description": "Injeta um script automaticamente no site definido pelo usu√°rio",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Definir site destino"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
